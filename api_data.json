      "fields": {
        "Parameter": [
          {
            "group": "Parameter",
            "type": "String",
            "optional": false,
            "field": "id",
            "description": "<p>ID de la catégorie à afficher</p>"
          },
          {
            "group": "Parameter",
            "type": "String",
            "optional": true,
            "field": "content",
            "description": "<p>Query à mettre égal à &quot;all&quot; pour avoir également le contenu de la catégorie</p>"
          }
        ]
      },
      "examples": [
